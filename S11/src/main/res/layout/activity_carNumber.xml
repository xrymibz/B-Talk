<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkcolor2"
    android:orientation="vertical">

	<TextView
		android:id="@+id/carnumberName"
		android:layout_width="70dp"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:text="车型  :"
		android:textColor="#000"
		android:textSize="20sp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginLeft="11dp"
		android:layout_marginStart="11dp" />

	<TextView
		android:id="@+id/carnumberType"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:text="车型（水方）"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textColor="#000"
		android:textSize="20sp"
		android:layout_toRightOf="@+id/carnumberName"
		android:layout_marginLeft="11dp"
		android:layout_marginStart="11dp" />
	<EditText
		android:id="@+id/carnumberedit"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:padding="15dp"
		android:layout_below="@id/carnumberName"
		android:background="@null"
		android:hint="请输入车牌号"
		android:textSize="20sp"
		android:layout_toLeftOf="@+id/carnumberbutton"
		android:layout_toStartOf="@+id/carnumberbutton" />
    <ListView
        android:id="@+id/carnumberlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/carnumberedit"
        />

	<Button
		android:id="@+id/carnumberbutton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="确定"
		android:layout_marginRight="12dp"
		android:padding="5dp"
		android:layout_above="@+id/carnumberlist"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginEnd="12dp"
		android:onClick="nextStep"/>


</RelativeLayout>
    <!-- carrier spinner -->
    <RelativeLayout
        android:id="@+id/carriedRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_border">

        <TextView
            android:id="@+id/carried"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/carried"
            android:textColor="#000"
            android:textSize="20sp" />
        <!--
        <Spinner
            android:id="@+id/carriedlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/carried"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/carried"
            android:background="@null"
            android:textSize="15sp" />
         -->
        <TextView
            android:id="@+id/carrierlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/carried"
            android:background="@null"
            android:text="@string/pleaseselect"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carriedRel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/layout_border"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/account"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/account"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/account"
            android:background="@null"
            android:hint="@string/account"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwdRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountRel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/layout_border"
        android:clickable="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/pwd"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/pwd"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pwdInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/pwd"
            android:background="@null"
            android:hint="@string/pwd"
            android:inputType="textPassword"
            android:textSize="20sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_in"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_below="@id/pwdRel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_button_system"
        android:onClick="login"
        android:text="@string/login_in"
        android:textColor="#ffffff"
        android:textSize="30dp" />

</RelativeLayout>

